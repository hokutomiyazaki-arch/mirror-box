<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    <!-- PWA設定 -->
    <meta name="application-name" content="ミラーボックスセラピー">
    <meta name="apple-mobile-web-app-title" content="ミラーセラピー">
    
    <!-- アイコン設定 -->
    <link rel="icon" href="https://hokutomiyazaki-arch.github.io/mirror-box/FNT512.png">
    <link rel="apple-touch-icon" href="https://hokutomiyazaki-arch.github.io/mirror-box/FNT512.png">
    <link rel="apple-touch-icon" sizes="180x180" href="https://hokutomiyazaki-arch.github.io/mirror-box/FNT512.png">
    <link rel="icon" type="image/png" sizes="192x192" href="https://hokutomiyazaki-arch.github.io/mirror-box/FNT512.png">
    <link rel="icon" type="image/png" sizes="512x512" href="https://hokutomiyazaki-arch.github.io/mirror-box/FNT512.png">
    
    <!-- テーマカラー -->
    <meta name="theme-color" content="#667eea">
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="manifest.json">
    
    <title>ミラーボックスセラピー</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            user-select: none;
            -webkit-tap-highlight-color: transparent;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
            position: fixed;
            top: 0;
            left: 0;
            background: #000;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: #ffffff;
            touch-action: none;
        }

        /* 回転制御用のコンテナ */
        #rotationContainer {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            transform-origin: center center;
            transition: none;
        }

        /* アプリ全体のラッパー */
        .app-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        /* スプラッシュスクリーン */
        .splash-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 3000;
            transition: opacity 0.5s ease;
        }

        .splash-screen.hide {
            opacity: 0;
            pointer-events: none;
        }

        .splash-logo {
            width: 150px;
            height: 150px;
            margin-bottom: 30px;
        }

        .splash-title {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
            text-align: center;
        }

        .splash-subtitle {
            font-size: 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .splash-copyright {
            font-size: 0.9rem;
            color: #666;
            margin-top: 20px;
        }

        /* メインコンテナ */
        .main-container {
            position: relative;
            width: 100%;
            height: 100%;
            background: #000;
            display: none;
        }

        .main-container.show {
            display: block;
        }

        /* ヘッダー（非表示可能） */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            z-index: 100;
            transition: transform 0.3s;
        }

        .header.hidden {
            transform: translateY(-100%);
        }

        .header-logo {
            height: 40px;
            width: auto;
            background: white;
            padding: 5px;
            border-radius: 8px;
        }

        .header-title {
            font-size: 1.2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: bold;
        }

        /* ビデオエリア */
        .video-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #000;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scaleX(-1);
            display: block;
        }

        video.normal {
            transform: scaleX(1);
        }

        /* 中心線 */
        .center-line {
            position: absolute;
            left: 50%;
            top: 0;
            width: 3px;
            height: 100%;
            background: linear-gradient(180deg, 
                transparent 0%, 
                rgba(255, 0, 0, 0.6) 10%, 
                rgba(255, 0, 0, 0.6) 90%, 
                transparent 100%);
            display: none;
            pointer-events: none;
            z-index: 50;
        }

        .center-line.active {
            display: block;
        }

        /* タイマー表示 */
        .timer-display {
            position: fixed;
            top: 70px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 3rem;
            font-weight: bold;
            color: white;
            text-shadow: 0 2px 10px rgba(0,0,0,0.8);
            background: rgba(0, 0, 0, 0.5);
            padding: 10px 30px;
            border-radius: 30px;
            display: none;
            z-index: 90;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .timer-display.active {
            display: block;
        }

        /* メニューボタン */
        .menu-button {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            z-index: 1000;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            transition: transform 0.3s;
        }

        .menu-button:active {
            transform: scale(0.95);
        }

        .menu-button.open {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        }

        /* 画面回転ボタン */
        .rotation-buttons {
            position: fixed;
            top: 20px;
            right: 20px;
            display: flex;
            gap: 10px;
            z-index: 95;
        }

        .rotation-btn {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            color: white;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .rotation-btn:active {
            transform: scale(0.95);
        }

        .rotation-btn.active {
            background: rgba(102, 126, 234, 0.8);
            border-color: #667eea;
        }

        /* コントロールパネル */
        .control-panel {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            transform: translateY(100%);
            transition: transform 0.3s ease;
            z-index: 999;
            max-height: 70vh;
            overflow-y: auto;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .control-panel.show {
            transform: translateY(0);
        }

        /* タブ */
        .tabs {
            display: flex;
            background: rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .tab {
            flex: 1;
            padding: 15px;
            background: transparent;
            border: none;
            color: rgba(255, 255, 255, 0.6);
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .tab.active {
            color: white;
            background: rgba(102, 126, 234, 0.2);
            border-bottom: 2px solid #667eea;
        }

        /* タブコンテンツ */
        .tab-content {
            display: none;
            padding: 20px;
        }

        .tab-content.active {
            display: block;
        }

        /* 説明セクション */
        .description {
            line-height: 1.8;
            color: rgba(255, 255, 255, 0.9);
        }

        .description h3 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.2rem;
        }

        .description p {
            margin-bottom: 15px;
            font-size: 0.95rem;
        }

        .description ul {
            list-style: none;
            padding-left: 0;
        }

        .description li {
            padding: 10px;
            margin-bottom: 10px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            border-left: 3px solid #667eea;
            padding-left: 15px;
        }

        /* コントロール */
        .controls {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .control-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
        }

        .control-label {
            color: white;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* トグルスイッチ */
        .toggle-switch {
            width: 52px;
            height: 30px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            position: relative;
            cursor: pointer;
            transition: background 0.3s;
        }

        .toggle-switch.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .toggle-switch::after {
            content: '';
            position: absolute;
            width: 26px;
            height: 26px;
            background: white;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: transform 0.3s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .toggle-switch.active::after {
            transform: translateX(22px);
        }

        /* ボタン */
        .button {
            padding: 15px 25px;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .button.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .button.success {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
            color: white;
        }

        .button.danger {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
        }

        .button:active {
            transform: scale(0.98);
        }

        /* 画面向き選択ボタン */
        .orientation-selector {
            display: flex;
            gap: 10px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
        }

        .orientation-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            color: white;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
        }

        .orientation-btn.active {
            background: rgba(102, 126, 234, 0.3);
            border-color: #667eea;
        }

        .orientation-btn span:first-child {
            font-size: 1.5rem;
        }

        /* フッター */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px;
            background: rgba(0, 0, 0, 0.8);
            text-align: center;
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.8rem;
            z-index: 80;
            display: none;
        }

        .footer.show {
            display: block;
        }

        /* レスポンシブ */
        @media (max-width: 600px) {
            .header-title {
                font-size: 1rem;
            }
            
            .timer-display {
                font-size: 2.5rem;
                top: 60px;
            }
            
            .description {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <!-- 回転コンテナ -->
    <div id="rotationContainer">
        <!-- アプリ全体のラッパー -->
        <div class="app-wrapper">
            <!-- スプラッシュスクリーン -->
            <div id="splashScreen" class="splash-screen">
                <img src="FNT512.png" alt="FNT Logo" class="splash-logo">
                <div class="splash-title">Functional Neuro Training</div>
                <div class="splash-subtitle">ミラーボックスセラピー</div>
                <div class="splash-copyright">© Functional Neuro Training</div>
            </div>

            <!-- メインコンテナ -->
            <div id="mainContainer" class="main-container">
                <!-- ヘッダー -->
                <div id="header" class="header">
                    <img src="FNT512-transparent.png" alt="FNT" class="header-logo">
                    <h1 class="header-title">ミラーボックスセラピー</h1>
                </div>

                <!-- 画面回転ボタン -->
                <div class="rotation-buttons">
                    <button id="portraitBtn" class="rotation-btn" title="縦向き">📱</button>
                    <button id="landscapeBtn" class="rotation-btn" title="横向き">📱</button>
                </div>

                <!-- ビデオコンテナ -->
                <div class="video-container">
                    <video id="video" autoplay playsinline muted></video>
                    <div id="centerLine" class="center-line"></div>
                </div>

                <!-- タイマー表示 -->
                <div id="timerDisplay" class="timer-display">00:00</div>

                <!-- メニューボタン -->
                <button id="menuButton" class="menu-button">☰</button>

                <!-- コントロールパネル -->
                <div id="controlPanel" class="control-panel">
                    <!-- タブ -->
                    <div class="tabs">
                        <button class="tab active" data-tab="controls">コントロール</button>
                        <button class="tab" data-tab="description">使い方</button>
                        <button class="tab" data-tab="about">説明</button>
                    </div>

                    <!-- コントロールタブ -->
                    <div class="tab-content active" id="controls">
                        <div class="controls">
                            <!-- 画面向き選択 -->
                            <div class="orientation-selector">
                                <button id="orientPortrait" class="orientation-btn">
                                    <span>📱</span>
                                    <span>縦向き</span>
                                </button>
                                <button id="orientLandscape" class="orientation-btn">
                                    <span>📱</span>
                                    <span>横向き</span>
                                </button>
                                <button id="orientAuto" class="orientation-btn active">
                                    <span>🔄</span>
                                    <span>自動</span>
                                </button>
                            </div>

                            <div class="control-item">
                                <span class="control-label">
                                    <span>🪞</span>
                                    <span>鏡像反転</span>
                                </span>
                                <div id="mirrorToggle" class="toggle-switch active"></div>
                            </div>

                            <div class="control-item">
                                <span class="control-label">
                                    <span>│</span>
                                    <span>中心線表示</span>
                                </span>
                                <div id="lineToggle" class="toggle-switch"></div>
                            </div>

                            <div class="control-item">
                                <span class="control-label">
                                    <span>👁️</span>
                                    <span>ヘッダー表示</span>
                                </span>
                                <div id="headerToggle" class="toggle-switch active"></div>
                            </div>

                            <button id="timerButton" class="button primary">
                                <span>⏱️</span>
                                <span>タイマー開始</span>
                            </button>

                            <button id="cameraButton" class="button success">
                                <span>📷</span>
                                <span>カメラ切替</span>
                            </button>

                            <button id="fullscreenButton" class="button primary">
                                <span>⛶</span>
                                <span>全画面表示</span>
                            </button>

                            <button id="stopButton" class="button danger">
                                <span>⏹️</span>
                                <span>セッション終了</span>
                            </button>
                        </div>
                    </div>

                    <!-- 使い方タブ -->
                    <div class="tab-content" id="description">
                        <div class="description">
                            <h3>📖 使い方</h3>
                            <ul>
                                <li>
                                    <strong>1. セットアップ</strong><br>
                                    デバイスを安定した場所に設置し、健側（動かせる側）の手足が画面に映るようにカメラを調整します
                                </li>
                                <li>
                                    <strong>2. 鏡像の確認</strong><br>
                                    画面に映る健側の動きが患側の動きのように見えることを確認します（左右反転）
                                </li>
                                <li>
                                    <strong>3. トレーニング開始</strong><br>
                                    健側を動かしながら、画面を見て患側が動いているイメージを脳に送ります
                                </li>
                                <li>
                                    <strong>4. 継続時間</strong><br>
                                    1回10-15分程度、1日2-3回を目安に行います。タイマー機能を活用してください
                                </li>
                                <li>
                                    <strong>5. 画面向きの変更</strong><br>
                                    画面上部の📱ボタン、またはコントロールパネルから画面向きを選択できます
                                </li>
                            </ul>

                            <h3>⚠️ 注意事項</h3>
                            <p>
                                • 必ず医療専門家の指導のもとで使用してください<br>
                                • 疲労を感じたら休憩を取ってください<br>
                                • 痛みがある場合は無理をしないでください
                            </p>
                        </div>
                    </div>

                    <!-- 説明タブ -->
                    <div class="tab-content" id="about">
                        <div class="description">
                            <h3>🧠 神経科学的な説明</h3>
                            <p>
                                ミラーボックスセラピーは、視覚的フィードバックを利用して脳の可塑性を促進する革新的なリハビリテーション技術です。
                            </p>

                            <h3>💡 作用機序</h3>
                            <ul>
                                <li>
                                    <strong>ミラーニューロンの活性化</strong><br>
                                    健側の動きを観察することで、両側の運動野のミラーニューロンが活性化され、患側の運動機能回復を促進します
                                </li>
                                <li>
                                    <strong>運動イメージの強化</strong><br>
                                    視覚的な錯覚により、患側が実際に動いているような感覚を脳に与え、運動プログラムの再構築を支援します
                                </li>
                                <li>
                                    <strong>脳の可塑性促進</strong><br>
                                    継続的な視覚刺激により、損傷を受けた脳領域の周辺部が機能を代償し、新たな神経回路の形成を促します
                                </li>
                            </ul>

                            <h3>🎯 適応症</h3>
                            <p>
                                • 脳卒中後の片麻痺<br>
                                • 複合性局所疼痛症候群（CRPS）<br>
                                • 幻肢痛<br>
                                • 末梢神経損傷<br>
                                • 手の外科手術後のリハビリ
                            </p>

                            <h3>📊 エビデンス</h3>
                            <p>
                                多数の臨床研究により、ミラーセラピーは運動機能の改善、疼痛の軽減、日常生活動作の向上に有効であることが示されています。
                                特に発症早期からの介入により、より良い機能回復が期待できます。
                            </p>
                        </div>
                    </div>
                </div>

                <!-- フッター -->
                <div id="footer" class="footer">
                    © Functional Neuro Training - All rights reserved
                </div>
            </div>
        </div>
    </div>

    <script>
        // グローバル変数
        let stream = null;
        let timerInterval = null;
        let seconds = 0;
        let isMenuOpen = false;
        let currentCamera = 'user';
        let isMirrored = true;
        let currentOrientation = 'auto';
        let deviceOrientation = null;
        let viewportWidth = window.innerWidth;
        let viewportHeight = window.innerHeight;

        // 初期化
        document.addEventListener('DOMContentLoaded', async () => {
            // 画面サイズを取得
            updateViewportDimensions();
            
            // ローカルストレージから設定を復元
            loadSettings();
            
            // スプラッシュスクリーンを表示
            setTimeout(async () => {
                await initializeApp();
            }, 2000);

            // イベントリスナーの設定
            setupEventListeners();
            
            // PWA対応
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('./sw.js')
                    .then(reg => console.log('SW registered'))
                    .catch(err => console.log('SW registration failed'));
            }
        });

        // ビューポートサイズの更新
        function updateViewportDimensions() {
            viewportWidth = window.innerWidth;
            viewportHeight = window.innerHeight;
            deviceOrientation = viewportWidth > viewportHeight ? 'landscape' : 'portrait';
        }

        // 設定の保存
        function saveSettings() {
            const settings = {
                orientation: currentOrientation,
                mirror: isMirrored,
                centerLine: document.getElementById('centerLine').classList.contains('active'),
                headerVisible: !document.getElementById('header').classList.contains('hidden')
            };
            localStorage.setItem('mirrorTherapySettings', JSON.stringify(settings));
        }

        // 設定の読み込み
        function loadSettings() {
            const saved = localStorage.getItem('mirrorTherapySettings');
            if (saved) {
                const settings = JSON.parse(saved);
                currentOrientation = settings.orientation || 'auto';
                isMirrored = settings.mirror !== undefined ? settings.mirror : true;
                
                // 設定を適用
                setTimeout(() => {
                    if (settings.centerLine) {
                        document.getElementById('centerLine').classList.add('active');
                        document.getElementById('lineToggle').classList.add('active');
                    }
                    if (settings.headerVisible === false) {
                        document.getElementById('header').classList.add('hidden');
                        document.getElementById('headerToggle').classList.remove('active');
                    }
                    applyOrientation(currentOrientation);
                }, 100);
            }
        }

        // 画面向きの適用
        function applyOrientation(orientation) {
            const container = document.getElementById('rotationContainer');
            const buttons = {
                portrait: document.getElementById('orientPortrait'),
                landscape: document.getElementById('orientLandscape'),
                auto: document.getElementById('orientAuto')
            };
            
            const topButtons = {
                portrait: document.getElementById('portraitBtn'),
                landscape: document.getElementById('landscapeBtn')
            };

            // ボタンのアクティブ状態を更新
            Object.values(buttons).forEach(btn => btn?.classList.remove('active'));
            Object.values(topButtons).forEach(btn => btn?.classList.remove('active'));
            
            currentOrientation = orientation;
            updateViewportDimensions();

            // CSSトランスフォームを適用
            if (orientation === 'portrait') {
                buttons.portrait?.classList.add('active');
                topButtons.portrait?.classList.add('active');
                
                if (deviceOrientation === 'landscape') {
                    // 横向きデバイスで縦表示
                    container.style.width = viewportHeight + 'px';
                    container.style.height = viewportWidth + 'px';
                    container.style.transform = 'rotate(-90deg)';
                    container.style.top = ((viewportHeight - viewportWidth) / 2) + 'px';
                    container.style.left = ((viewportWidth - viewportHeight) / 2) + 'px';
                } else {
                    // 縦向きデバイスで縦表示（通常）
                    resetContainerTransform();
                }
            } else if (orientation === 'landscape') {
                buttons.landscape?.classList.add('active');
                topButtons.landscape?.classList.add('active');
                
                if (deviceOrientation === 'portrait') {
                    // 縦向きデバイスで横表示
                    container.style.width = viewportHeight + 'px';
                    container.style.height = viewportWidth + 'px';
                    container.style.transform = 'rotate(90deg)';
                    container.style.top = ((viewportHeight - viewportWidth) / 2) + 'px';
                    container.style.left = ((viewportWidth - viewportHeight) / 2) + 'px';
                } else {
                    // 横向きデバイスで横表示（通常）
                    resetContainerTransform();
                }
            } else {
                // 自動（デバイスの向きに従う）
                buttons.auto?.classList.add('active');
                resetContainerTransform();
            }
            
            saveSettings();
        }

        // コンテナのトランスフォームをリセット
        function resetContainerTransform() {
            const container = document.getElementById('rotationContainer');
            container.style.width = '100vw';
            container.style.height = '100vh';
            container.style.transform = 'none';
            container.style.top = '0';
            container.style.left = '0';
        }

        // アプリ初期化
        async function initializeApp() {
            try {
                // カメラ起動
                await startCamera();
                
                // スプラッシュスクリーンを非表示
                document.getElementById('splashScreen').classList.add('hide');
                
                // メインコンテナを表示
                document.getElementById('mainContainer').classList.add('show');
                
                // アドレスバーを隠す
                if (window.scrollTo) {
                    window.scrollTo(0, 1);
                }
            } catch (error) {
                alert('カメラの起動に失敗しました。\nカメラへのアクセスを許可してください。');
                console.error('Camera error:', error);
            }
        }

        // カメラ起動
        async function startCamera() {
            const constraints = {
                video: {
                    facingMode: currentCamera,
                    width: { ideal: 1920 },
                    height: { ideal: 1080 }
                },
                audio: false
            };

            try {
                if (stream) {
                    stream.getTracks().forEach(track => track.stop());
                }

                stream = await navigator.mediaDevices.getUserMedia(constraints);
                const video = document.getElementById('video');
                video.srcObject = stream;
            } catch (error) {
                throw error;
            }
        }

        // イベントリスナー設定
        function setupEventListeners() {
            // メニューボタン
            document.getElementById('menuButton').addEventListener('click', toggleMenu);

            // タブ切替
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => switchTab(tab));
            });

            // 画面向きボタン（上部）
            document.getElementById('portraitBtn').addEventListener('click', () => {
                applyOrientation('portrait');
                closeMenu();
            });
            
            document.getElementById('landscapeBtn').addEventListener('click', () => {
                applyOrientation('landscape');
                closeMenu();
            });

            // 画面向きボタン（コントロールパネル）
            document.getElementById('orientPortrait').addEventListener('click', () => {
                applyOrientation('portrait');
            });
            
            document.getElementById('orientLandscape').addEventListener('click', () => {
                applyOrientation('landscape');
            });
            
            document.getElementById('orientAuto').addEventListener('click', () => {
                applyOrientation('auto');
            });

            // トグルスイッチ
            document.getElementById('mirrorToggle').addEventListener('click', toggleMirror);
            document.getElementById('lineToggle').addEventListener('click', toggleCenterLine);
            document.getElementById('headerToggle').addEventListener('click', toggleHeader);

            // ボタン
            document.getElementById('timerButton').addEventListener('click', toggleTimer);
            document.getElementById('cameraButton').addEventListener('click', switchCamera);
            document.getElementById('fullscreenButton').addEventListener('click', toggleFullscreen);
            document.getElementById('stopButton').addEventListener('click', stopSession);

            // ビデオタップでメニューを閉じる
            document.getElementById('video').addEventListener('click', () => {
                if (isMenuOpen) closeMenu();
            });

            // ウィンドウリサイズ検出
            window.addEventListener('resize', () => {
                updateViewportDimensions();
                if (currentOrientation !== 'auto') {
                    applyOrientation(currentOrientation);
                }
            });

            // デバイスの向き変更検出
            window.addEventListener('orientationchange', () => {
                setTimeout(() => {
                    updateViewportDimensions();
                    if (currentOrientation !== 'auto') {
                        applyOrientation(currentOrientation);
                    }
                }, 100);
            });

            // ページ離脱時の処理
            window.addEventListener('beforeunload', () => {
                if (stream) {
                    stream.getTracks().forEach(track => track.stop());
                }
            });
        }

        // メニュー切替
        function toggleMenu() {
            isMenuOpen = !isMenuOpen;
            const panel = document.getElementById('controlPanel');
            const button = document.getElementById('menuButton');
            
            if (isMenuOpen) {
                panel.classList.add('show');
                button.classList.add('open');
                button.innerHTML = '✕';
            } else {
                closeMenu();
            }
        }

        // メニューを閉じる
        function closeMenu() {
            isMenuOpen = false;
            document.getElementById('controlPanel').classList.remove('show');
            const button = document.getElementById('menuButton');
            button.classList.remove('open');
            button.innerHTML = '☰';
        }

        // タブ切替
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            const tabName = tab.dataset.tab;
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(tabName).classList.add('active');
        }

        // 鏡像反転切替
        function toggleMirror() {
            isMirrored = !isMirrored;
            const video = document.getElementById('video');
            const toggle = document.getElementById('mirrorToggle');
            
            if (isMirrored) {
                video.classList.remove('normal');
                toggle.classList.add('active');
            } else {
                video.classList.add('normal');
                toggle.classList.remove('active');
            }
            saveSettings();
        }

        // 中心線切替
        function toggleCenterLine() {
            const line = document.getElementById('centerLine');
            const toggle = document.getElementById('lineToggle');
            
            if (line.classList.contains('active')) {
                line.classList.remove('active');
                toggle.classList.remove('active');
            } else {
                line.classList.add('active');
                toggle.classList.add('active');
            }
            saveSettings();
        }

        // ヘッダー表示切替
        function toggleHeader() {
            const header = document.getElementById('header');
            const toggle = document.getElementById('headerToggle');
            
            if (header.classList.contains('hidden')) {
                header.classList.remove('hidden');
                toggle.classList.add('active');
            } else {
                header.classList.add('hidden');
                toggle.classList.remove('active');
            }
            saveSettings();
        }

        // タイマー切替
        function toggleTimer() {
            const button = document.getElementById('timerButton');
            const display = document.getElementById('timerDisplay');
            
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
                button.innerHTML = '<span>⏱️</span><span>タイマー開始</span>';
                seconds = 0;
                updateTimerDisplay();
                display.classList.remove('active');
            } else {
                display.classList.add('active');
                timerInterval = setInterval(() => {
                    seconds++;
                    updateTimerDisplay();
                }, 1000);
                button.innerHTML = '<span>⏸️</span><span>タイマー停止</span>';
                closeMenu();
            }
        }

        // タイマー表示更新
        function updateTimerDisplay() {
            const minutes = Math.floor(seconds / 60);
            const secs = seconds % 60;
            document.getElementById('timerDisplay').textContent = 
                `${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // カメラ切替
        async function switchCamera() {
            currentCamera = currentCamera === 'user' ? 'environment' : 'user';
            try {
                await startCamera();
                closeMenu();
            } catch (error) {
                alert('カメラの切替に失敗しました。');
                currentCamera = currentCamera === 'user' ? 'environment' : 'user';
            }
        }

        // 全画面切替
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    console.log('Fullscreen error:', err);
                });
            } else {
                document.exitFullscreen();
            }
            closeMenu();
        }

        // セッション終了
        function stopSession() {
            if (confirm('セッションを終了しますか？\n記録はリセットされます。')) {
                if (stream) {
                    stream.getTracks().forEach(track => track.stop());
                    stream = null;
                }
                
                if (timerInterval) {
                    clearInterval(timerInterval);
                    timerInterval = null;
                }
                
                seconds = 0;
                updateTimerDisplay();
                
                setTimeout(() => {
                    initializeApp();
                }, 500);
                
                closeMenu();
            }
        }

        // アドレスバーを隠す
        window.addEventListener('load', () => {
            setTimeout(() => {
                window.scrollTo(0, 1);
            }, 0);
        });

        // スクロール防止
        document.addEventListener('touchmove', (e) => {
            if (e.target.closest('.control-panel') === null) {
                e.preventDefault();
            }
        }, { passive: false });

        // 横向きボタンのアイコンを回転
        document.getElementById('landscapeBtn').style.transform = 'rotate(90deg)';
        document.getElementById('orientLandscape').querySelector('span:first-child').style.transform = 'rotate(90deg)';
    </script>
</body>
</html>
